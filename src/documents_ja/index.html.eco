<script>
  $(function() {
    $.getJSON('https://api.github.com/repos/OnsenUI/OnsenUI?callback=?').success(function(data) {
      if(data && data.data.watchers) {
        $('div.social a.github-star strong').text(data.data.watchers);
      }
    }).error(function() {
      $('div.social img.github-icon-mini').remove();
      $('div.social a.github-star').remove();
    });

    $.getJSON('https://cdn.api.twitter.com/1/users/show.json?screen_name=Onsen_UI&callback=?').success(function(data) {
      if(data && data.followers_count) {
        $('div.social > a.twitter-follower > strong').text(data.followers_count);
      }
    }).error(function() {
      $('div.social  img.twitter-icon-mini').remove();
      $('div.social  a.twitter-follower').remove();
    });

    // event tracking
    $('#keyvisual .download').click(function() {
      ga('send', 'event', 'website', 'download');
    });
  });
</script>

<script>
  $(function() {
    $('.newsletter form').submit(function() {
      var email = $('input[name=email]', this).val();
      ga('send', 'event', 'website', 'email');

      $.post('https://monaca.mobi/ja/api/email/e458bcbcc4', {email: email})
        .success(function(data) {
          var ret = JSON.parse(data);
          console.log(ret);
          if (ret.status !== undefined && ret.status === "success") {
            $('.newsletter form').hide();
            $('.newsletter-thankyou').show();
          } else {
            alert('Something wrong with the request. Sorry.');
          }
        });
      return false;
    });
  });
</script>
