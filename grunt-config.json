{
  "min": {
    "js": {
      "src": ["out/vendor/jquery.js", "out/vendor/log.js", "out/vendor/modernizr.js", "out/scripts/script.js"],
      "dest": "out/scripts/all.min.js"
    }
  },
  "concat": {
    "css": {
      "src": ["out/vendor/normalize.css","out/styles/style.css"],
      "dest": "out/styles/all.css"
    }
  },
  "cssmin": {
    "all": {
      "src": ["out/styles/all.css"],
      "dest": "out/styles/all.min.css"
    }
  },
  "topdoc": {
    "demo": {
      "options": {
        "source": "out/OnsenUI/themes/css",
        "destination": "src/files/themes",
        "template": "themes-topdoc-template/",
        "templateData": {}
      }
    }
  },
  "watch": {
    "topdoc" : {
      "files": ["demo-topdoc-template/**/*"],
      "tasks": ["topdoc"],
      "options": {
        "debounceDelay": 500
      }
    },
    "js": {
      "files": ["src/js/**/*/js"],
      "tasks": ["js"],
      "options": {
        "debounceDelay": 1000
      }
    },
    "css": {
      "files": ["src/scss/*.scss"],
      "tasks": ["css"],
      "options": {
        "debounceDelay": 300
      }
    },
    "all": {
      "files": ["<%= watch.js.files %>", "<%= watch.css.files %>"],
      "tasks": ["js", "css"],
      "options": "<%= watch.js.options %>"
    }
  },
  "compass": {
    "dev": {
      "options": {
        "config": "config.rb",
        "environment": "development"
      }
    },
    "prod": {
      "options": {
        "config": "config.rb",
        "environment": "production"
      }
    }
  }
}
